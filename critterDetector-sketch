/*
 * PIR sensor tester
 */
 
int ONledPin = 8;                // Pin for Motion detected LED
int OFFledPin = 7;              // Pin for Motion NOT detected LED
int inputPin = 2;               // choose the input pin (for PIR sensor)
int pirState = LOW;             // we start, assuming no motion detected
int val = 0;                    // variable for reading the pin status
 
void setup() {
  pinMode(ONledPin, OUTPUT);      // declare LED as output
  pinMode(OFFledPin, OUTPUT);      // declare LED as output
  pinMode(inputPin, INPUT);     // declare sensor as input
 
  Serial.begin(9600);
}
 
void loop(){
  val = digitalRead(inputPin);  // read input value
  if (val == HIGH) {            // check if the input is HIGH
    digitalWrite(ONledPin, HIGH);  // turn LED ON
    digitalWrite(OFFledPin, LOW);  // turn LED OFF
    if (pirState == LOW) {
      // we have just turned on
      Serial.println("Motion detected!");
      // We only want to print on the output change, not state
      pirState = HIGH;
    }
  } else {
    digitalWrite(OFFledPin, HIGH); // turn LED ON
    digitalWrite(ONledPin, LOW); // turn LED OFF
    if (pirState == HIGH){
      // we have just turned of
      Serial.println("Motion ended!");
      // We only want to print on the output change, not state
      pirState = LOW;
    }
  }
}
